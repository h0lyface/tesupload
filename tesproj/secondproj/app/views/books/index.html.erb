<% if @books.blank? %>
<p>There are not any books currently in the system.</p>
<% else %>
<p>These are the current books in our system</p>
<ul id="books">
	<% @books.each do |book| %>
	<li>
          <%= link_to book.title, {:action => 'show', :id => book.id} -%>
          <%= link_to 'Edit', edit_book_path(book) %>
          <%= link_to "Delete", book,
            :confirm => "Are you sure you want to delete this item?",method: :delete %>
        </li>
	<% end %>
</ul>
<% end %>
<p><%= link_to "Add new Book", new_book_path%></p>